{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Expo: Start Packager",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/expo",
      "args": ["start"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Attach to Metro",
      "request": "attach",
      "type": "reactnative",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Android (Expo)",
      "request": "launch",
      "type": "reactnative",
      "platform": "android",
      "cwd": "${workspaceFolder}",
      "target": "device"
    }
  ]
}